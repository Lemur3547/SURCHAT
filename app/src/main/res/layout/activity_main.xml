<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="19dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/menu"
            android:src="@drawable/ic_menu_white">
        </ImageView>

        <ImageView
            android:layout_width="168dp"
            android:layout_height="60dp"
            android:layout_marginVertical="9dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo_1">
        </ImageView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="19dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/search"
            android:src="@drawable/ic_search_white">

        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white"
        android:layout_marginTop="2dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_avatar"
            app:shapeAppearanceOverlay="@style/roundedImg"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp">
        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="14dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"
            android:ellipsize="end"
            android:maxLines="1"
            tools:ignore="RelativeOverlap">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp"
            android:layout_marginStart="75dp"
            tools:ignore="RelativeOverlap">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/black"
                android:text="@string/last_message_author">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/last_message_text">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="14dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/last_message_time">

        </TextView>
        <RelativeLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/round"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="38dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/unread_messages_count"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white"
        android:layout_marginTop="2dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_kirkorov"
            app:shapeAppearanceOverlay="@style/roundedImg"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp">
        </com.google.android.material.imageview.ShapeableImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Филипп Киркоров"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ubuntu_medium">
            </TextView>
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_mute_gray"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:contentDescription="@string/mute_icon">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="42dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Все, досвидания! Говорите сначала научитесь"
                android:textColor="@color/gray"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp">

            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="14dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/ubuntu_regular"
            android:text="15:28">

        </TextView>
        <RelativeLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/round_mute"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="38dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white"
        android:layout_marginTop="2dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_avatar"
            app:shapeAppearanceOverlay="@style/roundedImg"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp">
        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создатели"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="14dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp"
            android:layout_marginStart="75dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/black"
                android:text="Ariez:">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Das ist Scheiße">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="14dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/ubuntu_regular"
            android:text="15:28">

        </TextView>
        <RelativeLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/round"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="38dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white"
        android:layout_marginTop="2dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_avatar"
            app:shapeAppearanceOverlay="@style/roundedImg"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp">
        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создатели"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="14dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp"
            android:layout_marginStart="75dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/black"
                android:text="Ariez:">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Das ist Scheiße">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="14dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/ubuntu_regular"
            android:text="15:28">

        </TextView>
        <RelativeLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/round"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="38dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>